---
import { MESSAGES } from '@constants/content'
import Group from './messages/Group.astro'
---

<style lang="scss">
  main {
    margin: 0 auto;
    overflow: auto;
    position: relative;
    box-sizing: border-box;
    padding-top: max(20vh, 8rem);
    padding-bottom: 4rem;
    max-width: 38.5rem;
    height: 100vh;
    width: 92.5%;

    &::-webkit-scrollbar {
      display: none;
    }

    & > div {
      padding: 1rem 0;
      border-radius: 1rem;
      background-color: rgba(17, 17, 17, 0.4);
      backdrop-filter: blur(20px);

      display: flex;
      row-gap: 1.75rem;
      flex-direction: column;
    }
  }

  .shadow {
    pointer-events: none;
    position: absolute;
    width: 100%;
    height: 3rem;
    z-index: 99;
    transition: opacity 100ms ease;

    &.top {
      top: 0;
      background: linear-gradient(180deg, rgba(17, 17, 17, 1) 0%, rgba(0, 0, 0, 0) 100%);
    }

    &.bottom {
      bottom: 0;
      background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(17, 17, 17, 1) 100%);
    }
  }
</style>
<div class="shadow top"></div>
<div class="shadow bottom"></div>
<main>
  <div>
    {MESSAGES.map((messages) => <Group avatar="/assets/robbie.png" messages={messages} />)}
    <Group avatar="/assets/robbie.png" messages={[undefined]} status="Robbie is typing..." />
    <Group messages={['I have sent this message, using a modal maybe?']} reversed status="Sent" />
    <Group avatar="/assets/robbie.png" messages={['Message delivered ðŸ«¡']} status="Seen" />
  </div>
</main>
