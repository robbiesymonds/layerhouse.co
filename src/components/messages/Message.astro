---
import Loader from '@components/Loader.astro'
interface Props {
  content?: string
  reversed?: boolean
}

const { content, reversed } = Astro.props
---

<style lang="scss">
  div {
    background-color: #151515;
    border: 1px solid #252525;
    color: #eeeeee;
    padding-top: 0.55rem;
    padding-bottom: 0.35rem;
    padding-left: 0.55rem;
    padding-right: 1rem;
    border-radius: 1rem;
    font-size: 1rem;
    width: fit-content;
    line-height: 1.35;
    transition: border-radius 0.1s cubic-bezier(0.075, 0.82, 0.165, 1);

    &:first-child:not(:last-child) {
      border-bottom-left-radius: 0.25rem;
    }

    &:not(:first-child) {
      border-top-left-radius: 0.25rem;
    }

    &:nth-child(2):not(:first-child):not(:last-child) {
      border-top-left-radius: 0.25rem;
      border-bottom-left-radius: 0.25rem;
    }

    :global(svg) {
      height: 0.5rem;
      transform: translateY(-25%);
      margin-left: 0.35rem;
      opacity: 0.5;
    }

    :global(a) {
      color: white;

      &:hover {
        color: #cccccc;
      }
    }
  }

  .reversed {
    background-color: #8033e4;
    border-color: #9747ff;
    white-space: pre-wrap;
  }
</style>

{
  content ? (
    <div class:list={[{ reversed }]} set:html={content} />
  ) : (
    <div class:list={[{ reversed }]} style="white-space: normal;">
      <Loader />
    </div>
  )
}
