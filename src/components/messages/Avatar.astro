---
interface Props {
  src: string
}

const { src } = Astro.props
---

<style>
  div {
    width: 2rem;
    height: 2rem;
    border-radius: 100%;
    position: relative;
    overflow: hidden;
    flex: none;
  }

  img {
    pointer-events: none;
    position: absolute;
    object-fit: cover;
    user-select: none;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
  }
</style>
<div>
  <img src={src} />
</div>
