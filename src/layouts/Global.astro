---
import '@fontsource/inter/400.css'
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Layerhouse is a digital consultancy with a unique blend of technical, strategic and creative skills."
    />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>Layerhouse</title>
  </head>
  <body>
    <style is:global lang="scss">
      :root {
        --fontsource-display: block;
      }

      * {
        margin: 0;
        padding: 0;
      }

      html,
      body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        color-scheme: dark;
        background-color: #111111;
        position: relative;
        font-size: 14px;
        font-family: Inter, -apple-system, Helvetica, Arial, sans-serif;
        font-display: swap;
      }

      .logo {
        top: 2.5rem;
        left: 2.5rem;
        height: 2.5rem;
        width: 2.5rem;
        overflow: hidden;
        position: absolute;
        cursor: help;

        & svg {
          width: auto;
          height: 100%;
        }
      }
    </style>
    <slot />
  </body>
</html>
