---
import { META } from '@constants/content'
import '@fontsource/inter/400.css'
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="description" content={META.description} />
    <title>{META.title}</title>
  </head>
  <body>
    <style is:global lang="scss">
      :root {
        --fontsource-display: block;
      }

      * {
        margin: 0;
        padding: 0;
      }

      html,
      body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        color-scheme: dark;
        background-color: #111111;
        position: relative;
        font-size: 14px;
        font-family: Inter, -apple-system, Helvetica, Arial, sans-serif;
        font-display: swap;
      }

      // Group
      section {
        max-width: 87.5%;
        animation-fill-mode: forwards;
        animation: slide-in 1s cubic-bezier(0.19, 1, 0.22, 1);

        &.sent {
          align-self: flex-end;

          & p {
            text-align: right;
          }

          & .list {
            align-items: flex-end;
          }
        }

        & > div {
          display: flex;
          flex-direction: row;
          align-items: flex-end;
          flex-wrap: nowrap;
          column-gap: 1rem;
        }
      }

      .list {
        display: flex;
        row-gap: 0.25rem;
        flex-direction: column;
        width: 100%;
        transition: max-height 0.5s cubic-bezier(0.075, 0.82, 0.165, 1);
      }

      p {
        display: block;
        font-size: 0.85rem;
        letter-spacing: 0.015em;
        margin-top: 0.25rem;
        margin-left: 3rem;
        margin-right: 0.1rem;
        font-weight: 400;
        opacity: 0.45;
      }

      // Avatar
      .avatar {
        width: 2rem;
        height: 2rem;
        border-radius: 100%;
        position: relative;
        overflow: hidden;
        flex: none;

        & > img {
          pointer-events: none;
          position: absolute;
          object-fit: cover;
          user-select: none;
          width: 100%;
          height: 100%;
          top: 0;
          left: 0;
        }
      }

      // Message
      .message {
        background-color: #151515;
        border: 1px solid #252525;
        color: #eeeeee;
        padding-top: 0.55rem;
        padding-bottom: 0.35rem;
        padding-left: 0.55rem;
        padding-right: 1rem;
        border-radius: 1rem;
        font-size: 1rem;
        width: fit-content;
        line-height: 1.35;
        transition: all 0.1s cubic-bezier(0.075, 0.82, 0.165, 1);
        position: relative;
        animation-fill-mode: forwards;
        animation: fade-in 1s cubic-bezier(0.19, 1, 0.22, 1);
        cursor: default;

        &:hover {
          border-color: #303030;
        }

        &:first-child:not(:last-child) {
          border-bottom-left-radius: 0.25rem;
        }

        &:not(:first-child) {
          border-top-left-radius: 0.25rem;
        }

        &:nth-child(2):not(:first-child):not(:last-child) {
          border-top-left-radius: 0.25rem;
          border-bottom-left-radius: 0.25rem;
        }

        &.sent {
          background-color: #8033e4;
          border-color: #9747ff;
          white-space: pre-wrap;
        }

        & svg {
          height: 0.5rem;
          transform: translateY(-25%);
          margin-left: 0.35rem;
          opacity: 0.5;
        }

        & a {
          color: white;

          &:hover {
            color: #cccccc;
          }
        }
      }

      .input {
        display: flex;
        flex-wrap: nowrap;
        width: 100%;
        position: absolute;
        bottom: 0;
        left: 0;
      }

      @keyframes slide-in {
        from {
          opacity: 0;
          transform: translateY(2rem);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes fade-in {
        from {
          opacity: 0;
          transform: translateY(0.5rem);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
    </style>
    <slot />
  </body>
</html>
